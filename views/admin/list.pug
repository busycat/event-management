extends ../layout

block content
     .row
            .col.py-5
                .d-flex.mb-3
                    .h1 Event Management
                    .flex-grow-1
                    button.btn.btn-success(type='button' data-toggle='modal' data-target='#form')
                        i.mdi.mdi-plus
                        | Add
                .text-center.table-responsive
                    table.table.table-striped
                        thead.thead-default
                            tr
                                th Name
                                th Date
                                th Type
                                th Description
                                th Location
                                th Coordinates
                                th Image
                                th File
                                th Actions
                        tbody
                            each event in events
                                tr
                                    td(scope='row') #{event.name}
                                    td #{event.date}
                                    td #{event.type}
                                    td #{event.description}
                                    td #{event.location}
                                    td #{event.lat},#{event.lon}
                                    td
                                        img(src=event.image, style={height: '20px'})
                                    td
                                        a.mdi.mdi-file(href=event.file) File
                                    td
                                        button.btn.btn-warning(type='button')
                                            i.mdi.mdi-pencil
                                            | Edit
                                        button.btn.btn-danger(type='button')
                                            i.mdi.mdi-delete
                                            | Delete

                if paginate
                    .row
                        .col-12
                            nav.text-center(aria-label='Page navigation')
                                ul.pagination
                                    li.page-item
                                        a.page-link(href='?page=0' aria-label='First')
                                            span(aria-hidden='true') «
                                            span.sr-only First
                                    each pg in paginate.pages
                                        li.page-item(class=(page === pg) ? 'active' : undefined)
                                            a.page-link(href='?page=' + pg) #{pg}
                                    li.page-item
                                        a.page-link(href='?page='+(paginate.lastPage-1) aria-label='Last')
                                            span(aria-hidden='true') »
                                            span.sr-only Last
                                                
                .modal.fade#form(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
                    .modal-dialog.modal-dialog-centered(role='document')
                        .modal-content
                        .modal-header.border-bottom-0
                            h5.modal-title#exampleModalLabel Create Account
                            button.close(type='button' data-dismiss='modal' aria-label='Close')
                            span(aria-hidden='true') ×
                        form
                            .modal-body
                            .form-group
                                label(for='email1') Email address
                                input.form-control#email1(type='email' aria-describedby='emailHelp' placeholder='Enter email')
                                small#emailHelp.form-text.text-muted Your information is safe with us.
                            .form-group
                                label(for='password1') Password
                                input.form-control#password1(type='password' placeholder='Password')
                            .form-group
                                label(for='password1') Confirm Password
                                input.form-control#password2(type='password' placeholder='Confirm Password')
                            .modal-footer.border-top-0.d-flex.justify-content-center
                            button.btn.btn-success(type='submit') Submit