mixin modal(id, event)
    form.needs-validation#event                                                                                                                                                            
        .modal-body
            input.form-control#id(name='id' type='hidden' value=event.id)
            .form-group
                label(for='name') Name
                input.form-control#name(name='name' type='text' required minlength='3' placeholder='Enter Name' value=event.name)
            .form-group
                label(for='eventDate') Event Date
                input.form-control#eventDate(name='eventDate' type='date' placeholder='Event Date' value=moment(event.eventDate).format('YYYY-MM-DD'))
            .form-group
                label(for='eventType') Event Type
                select.form-control#eventType(name='eventType' value=event.eventType)
                    option Festival
                    option Party
                    option Workshop
            .form-group
                label(for='location') Location
                input.form-control#location(name='location' placeholder='Enter Location' required maxlength=64 minlength=5 value=event.location)
            .form-group
                label(for='description') Description
                textarea.form-control#description(name='description' placeholder='Enter Description' maxlength=1024 minlength=5 rows=3)
                    | #{event.description}
            .form-group
                label(for='lat') Latitude
                input.form-control#lat(name='lat' type='number' step="0.0001" placeholder='Latitude'  min=-90 max=90 value=event.lat)
            .form-group
                label(for='lon') Longitude
                input.form-control#lon(name='lon' type='number' step="0.0001" placeholder='Longitude' min=-180 max=180 value=event.lon)
            if !event.image
                .form-group.custom-file.mb-3
                    input.custom-file-input#image(name='image' type='file' accept="image/*" required )
                    label.custom-file-label(for='image') Choose Image...
                    .invalid-feedback Image error
            if !event.file
                .form-group.custom-file.mb-3
                    input.custom-file-input#file(name='file' type='file' required)
                    label.custom-file-label(for='file') Choose file...
                    .invalid-feedback File error
            button.btn.btn-primary(type='submit') Save changes